@page
@model KontrolaNawykow.Pages.Account.RegisterDietModel
@{
    ViewData["NoHeader"] = true;
    ViewData["NoFooter"] = true;
    Layout = null;
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Rejestracja - Twoje BMI - KontrolaNawyków</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Purple+Purse&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Charmonman:wght@400;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f9e3e6;
            margin: 0;
            padding: 0;
        }

        .container {
            display: flex;
            min-height: 100vh;
        }

        .bmi-container {
            flex: 1;
            padding: 2rem;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .bmi-content {
            max-width: 600px;
            width: 100%;
            background-color: rgba(255, 255, 255, 0.9);
            border-radius: 15px;
            padding: 2rem;
            margin: 0 auto;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .images-container {
            flex: 1;
            background-image: url('/images/dietka.png');
            background-size: cover;
            background-position: center;
        }

        h1 {
            font-family: 'Purple Purse', cursive;
            color: #333;
            text-align: center;
            margin-bottom: 1.5rem;
        }

        .bmi-result {
            margin-bottom: 2rem;
            font-size: 1.1rem;
        }

        .bmi-value {
            font-size: 1.5rem;
            font-weight: bold;
            color: #333;
            background-color: #f8f3f3;
            padding: 0.5rem 1rem;
            border-radius: 5px;
            margin: 0.5rem 0;
            display: inline-block;
        }

        .bmi-category {
            font-size: 1.3rem;
            font-weight: bold;
            color: #333;
            background-color: #ffd1dc;
            padding: 0.5rem 1rem;
            border-radius: 5px;
            margin: 0.5rem 0;
            display: inline-block;
        }

        .nutrition-info {
            margin-bottom: 2rem;
            background-color: #f9f9f9;
            padding: 1rem;
            border-radius: 10px;
            border: 1px solid #eee;
        }

        .nutrition-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 0.5rem;
            padding-bottom: 0.5rem;
            border-bottom: 1px dashed #ddd;
        }

        .nutrition-label {
            font-weight: 600;
        }

        .nutrition-value {
            font-weight: bold;
            color: #ff69b4;
        }

        .caloric-info {
            margin-bottom: 2rem;
        }

        .caloric-value {
            font-size: 1.3rem;
            font-weight: bold;
            color: #333;
            background-color: #f8f3f3;
            padding: 0.5rem 1rem;
            border-radius: 5px;
            margin: 0.5rem 0;
            display: inline-block;
        }

        .custom-values {
            margin-top: 2rem;
        }

        .custom-toggle {
            margin-bottom: 1rem;
        }

        .toggle-button {
            background-color: transparent;
            border: 2px solid #ff69b4;
            color: #ff69b4;
            padding: 0.5rem 1rem;
            border-radius: 20px;
            cursor: pointer;
            font-weight: bold;
            margin-right: 0.5rem;
            transition: all 0.3s;
        }

            .toggle-button.active, .toggle-button:hover {
                background-color: #ff69b4;
                color: white;
            }

        .custom-form {
            display: none;
            background-color: #f8f3f3;
            padding: 1rem;
            border-radius: 10px;
            margin-top: 1rem;
        }

            .custom-form.active {
                display: block;
            }

        .form-group {
            margin-bottom: 1rem;
        }

            .form-group label {
                display: block;
                margin-bottom: 0.5rem;
                font-weight: 600;
                color: #333;
            }

        .form-control {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 1rem;
        }

            .form-control:focus {
                border-color: #ff69b4;
                outline: none;
                box-shadow: 0 0 0 2px rgba(255, 105, 180, 0.2);
            }

        .btn-primary {
            background-color: #ff69b4;
            color: white;
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 5px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: background-color 0.2s;
            display: block;
            width: 100%;
            margin-top: 1.5rem;
        }

            .btn-primary:hover {
                background-color: #ff1493;
            }

        /* Responsywność */
        @@media (max-width: 768px) {
            .container {
                flex-direction: column;
            }

            .images-container {
                min-height: 250px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="bmi-container">
            <div class="bmi-content">
                <h1>Twoje wyniki</h1>

                <div class="bmi-result">
                    <p>Twoje BMI wynosi:</p>
                    <div class="bmi-value">@Model.Bmi.ToString("F1")</div>

                    <p>Co oznacza:</p>
                    <div class="bmi-category">@Model.BmiCategory</div>
                </div>

                <div class="caloric-info">
                    <p>Deficyt kaloryczny:</p>
                    <div class="caloric-value">@Model.CaloriesDeficit kcal</div>
                </div>

                <div class="nutrition-info">
                    <h3>Zalecane dzienne spożycie makroskładników:</h3>

                    <div class="nutrition-row">
                        <span class="nutrition-label">Białko:</span>
                        <span class="nutrition-value">@Model.ProteinGrams g (@Model.ProteinPercentage%)</span>
                    </div>

                    <div class="nutrition-row">
                        <span class="nutrition-label">Węglowodany:</span>
                        <span class="nutrition-value">@Model.CarbsGrams g (@Model.CarbsPercentage%)</span>
                    </div>

                    <div class="nutrition-row">
                        <span class="nutrition-label">Tłuszcze:</span>
                        <span class="nutrition-value">@Model.FatGrams g (@Model.FatPercentage%)</span>
                    </div>
                </div>

                <div class="custom-values">
                    <p>Czy chciałbyś zmienić wyliczone wartości na własne?</p>

                    <div class="custom-toggle">
                        <button type="button" class="toggle-button" id="btnYes">Tak</button>
                        <button type="button" class="toggle-button active" id="btnNo">Nie</button>
                    </div>

                    <div class="custom-form" id="customForm">
                        <form method="post">
                            <input type="hidden" name="UseCustomValues" value="true" />

                            <div class="form-group">
                                <label for="customBmi">Twoje BMI:</label>
                                <input type="number" id="customBmi" name="CustomBmi" class="form-control" value="@Model.Bmi.ToString("F1")" step="0.1" min="10" max="50" />
                            </div>

                            <div class="form-group">
                                <label for="customCalories">Twój deficyt kaloryczny:</label>
                                <input type="number" id="customCalories" name="CustomCaloriesDeficit" class="form-control" value="@Model.CaloriesDeficit" step="50" min="0" max="3000" />
                            </div>

                            <div class="form-group">
                                <label for="customProtein">Białko (g):</label>
                                <input type="number" id="customProtein" name="CustomProteinGrams" class="form-control" value="@Model.ProteinGrams" step="1" min="0" max="300" />
                            </div>

                            <div class="form-group">
                                <label for="customCarbs">Węglowodany (g):</label>
                                <input type="number" id="customCarbs" name="CustomCarbsGrams" class="form-control" value="@Model.CarbsGrams" step="1" min="0" max="500" />
                            </div>

                            <div class="form-group">
                                <label for="customFat">Tłuszcze (g):</label>
                                <input type="number" id="customFat" name="CustomFatGrams" class="form-control" value="@Model.FatGrams" step="1" min="0" max="200" />
                            </div>

                            <button type="submit" class="btn-primary">Zapisz i przejdź dalej</button>
                        </form>
                    </div>

                    <form method="post" id="defaultForm">
                        <input type="hidden" name="UseCustomValues" value="false" />
                        <button type="submit" class="btn-primary">Zatwierdź i przejdź dalej</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="images-container"></div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const btnYes = document.getElementById('btnYes');
            const btnNo = document.getElementById('btnNo');
            const customForm = document.getElementById('customForm');
            const defaultForm = document.getElementById('defaultForm');

            btnYes.addEventListener('click', function () {
                btnYes.classList.add('active');
                btnNo.classList.remove('active');
                customForm.classList.add('active');
                defaultForm.style.display = 'none';
            });

            btnNo.addEventListener('click', function () {
                btnNo.classList.add('active');
                btnYes.classList.remove('active');
                customForm.classList.remove('active');
                defaultForm.style.display = 'block';
            });
        });
    </script>
</body>
</html>