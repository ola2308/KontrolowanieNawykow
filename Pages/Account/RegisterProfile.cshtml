@page
@model KontrolaNawykow.Pages.Account.RegisterProfileModel
@{
    ViewData["NoHeader"] = true;
    ViewData["NoFooter"] = true;
    Layout = null;
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Rejestracja - KontrolaNawyków</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Purple+Purse&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Charmonman:wght@400;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f9e3e6;
            margin: 0;
            padding: 0;
        }

        .container {
            display: flex;
            min-height: 100vh;
        }

        .form-container {
            flex: 1;
            padding: 2rem;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .form-content {
            max-width: 600px;
            width: 100%;
            background-color: rgba(255, 255, 255, 0.9);
            border-radius: 15px;
            padding: 2rem;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .image-container {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }

            .image-container img {
                max-width: 100%;
                max-height: 80vh; /* Powiększony gif */
                border-radius: 15px;
                box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            }

        h1 {
            font-family: 'Purple Purse', cursive;
            color: #333;
            text-align: center;
            margin-bottom: 1.5rem;
        }

        .welcome-message {
            text-align: center;
            margin-bottom: 2rem;
            font-size: 1.2rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

            .form-group label {
                display: block;
                margin-bottom: 0.5rem;
                font-weight: 600;
                color: #333;
            }

        .form-control {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 1rem;
        }

            .form-control:focus {
                border-color: #ff69b4;
                outline: none;
                box-shadow: 0 0 0 2px rgba(255, 105, 180, 0.2);
            }

        .goals-container {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            margin-bottom: 1.5rem;
        }

        .goal-radio {
            display: none;
        }

        .goal-label {
            display: flex;
            align-items: center;
            padding: 0.5rem 1rem;
            background-color: #f8f8f8;
            border: 1px solid #ddd;
            border-radius: 5px;
            cursor: pointer;
            transition: all 0.2s;
        }

            .goal-label:before {
                content: "♡";
                margin-right: 8px;
                font-size: 1.2rem;
            }

        .goal-radio:checked + .goal-label {
            background-color: #ffd1dc;
            border-color: #ff69b4;
        }

            .goal-radio:checked + .goal-label:before {
                content: "♥";
                color: #ff69b4;
            }

        .activity-options, .work-options {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            margin-bottom: 1.5rem;
        }

        .option-radio {
            display: none;
        }

        .option-label {
            flex: 1;
            min-width: 110px;
            text-align: center;
            padding: 0.5rem;
            background-color: #f8f8f8;
            border: 1px solid #ddd;
            border-radius: 5px;
            cursor: pointer;
            transition: all 0.2s;
        }

        .option-radio:checked + .option-label {
            background-color: #ffd1dc;
            border-color: #ff69b4;
            color: #333;
            font-weight: 600;
        }

        .submit-btn {
            display: block;
            width: 100%;
            padding: 0.75rem;
            background-color: #ff69b4;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: background-color 0.2s;
        }

            .submit-btn:hover {
                background-color: #ff1493;
            }

        .alert {
            padding: 0.75rem;
            border-radius: 5px;
            margin-bottom: 1rem;
            color: #721c24;
            background-color: #f8d7da;
            border: 1px solid #f5c6cb;
        }

        .alert-success {
            color: #155724;
            background-color: #d4edda;
            border: 1px solid #c3e6cb;
        }

        /* Responsywność */
        @@media (max-width: 768px) {
            .container {
                flex-direction: column;
            }

            .image-container {
                order: -1;
            }
        }

        /* Stylizacja select */
        select.form-control {
            appearance: none;
            background-image: url("data:image/svg+xml;charset=UTF-8,%3csvg xmlns='http://www.w3.org/2000/svg' width='16' height='16' fill='%23333' viewBox='0 0 16 16'%3e%3cpath d='M8 12.6a.8.8 0 0 1-.44-.13l-6-4a.8.8 0 1 1 .88-1.34L8 10.74l5.56-3.6a.8.8 0 1 1 .88 1.33l-6 4A.8.8 0 0 1 8 12.6z'/%3e%3c/svg%3e");
            background-repeat: no-repeat;
            background-position: right 0.75rem center;
            background-size: 16px 12px;
            padding-right: 2.5rem;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="form-container">
            <div class="form-content">
                <h1>Rejestracja - Profil</h1>

                <div class="welcome-message">
                    Uzupełnij swój profil, aby w pełni korzystać z KontrolaNawyków!
                </div>

                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert">
                        @Model.ErrorMessage
                    </div>
                }

                <form method="post">
                    <div class="form-group">
                        <label>Cel:</label>
                        <div class="goals-container">
                            <input type="radio" id="goal1" class="goal-radio" name="Cel" value="ZdroweNawyki" asp-for="Cel" />
                            <label for="goal1" class="goal-label">Zdobycie zdrowych nawyków</label>

                            <input type="radio" id="goal2" class="goal-radio" name="Cel" value="Schudniecie" asp-for="Cel" />
                            <label for="goal2" class="goal-label">Schudnięcie</label>

                            <input type="radio" id="goal3" class="goal-radio" name="Cel" value="PrzybranieMasy" asp-for="Cel" />
                            <label for="goal3" class="goal-label">Przybranie na masie</label>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="wiek">Wiek:</label>
                        <select id="wiek" class="form-control" name="Wiek">
                            <option value="">Wybierz wiek</option>
                            @for (int i = 16; i <= 80; i++)
                            {
                                <option value="@i">@i lat</option>
                            }
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="waga">Waga (kg):</label>
                        <input type="number" id="waga" class="form-control" name="Waga" step="0.1" min="30" max="250" placeholder="np. 70.5" />
                    </div>

                    <div class="form-group">
                        <label for="wzrost">Wzrost (cm):</label>
                        <input type="number" id="wzrost" class="form-control" name="Wzrost" step="1" min="120" max="240" placeholder="np. 175" />
                    </div>

                    <div class="form-group">
                        <label>Aktywność fizyczna:</label>
                        <div class="activity-options">
                            <input type="radio" id="activity1" class="option-radio" name="AktywnoscFizyczna" value="0 treningów tygodniowo" />
                            <label for="activity1" class="option-label">0 treningów tygodniowo</label>

                            <input type="radio" id="activity2" class="option-radio" name="AktywnoscFizyczna" value="1-3 treningów tygodniowo" />
                            <label for="activity2" class="option-label">1-3 treningów tygodniowo</label>

                            <input type="radio" id="activity3" class="option-radio" name="AktywnoscFizyczna" value="4-5 treningów tygodniowo" />
                            <label for="activity3" class="option-label">4-5 treningów tygodniowo</label>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Rodzaj pracy:</label>
                        <div class="work-options">
                            <input type="radio" id="work1" class="option-radio" name="RodzajPracy" value="Fizyczna" />
                            <label for="work1" class="option-label">Fizyczna</label>

                            <input type="radio" id="work2" class="option-radio" name="RodzajPracy" value="Siedząca" />
                            <label for="work2" class="option-label">Siedząca</label>

                            <input type="radio" id="work3" class="option-radio" name="RodzajPracy" value="Pół na pół" />
                            <label for="work3" class="option-label">Pół na pół</label>
                        </div>
                    </div>

                    <button type="submit" class="submit-btn">Kontynuuj</button>
                </form>
            </div>
        </div>

        <div class="image-container">
            <img src="~/images/pierwszeDane.gif" alt="Kontrola Nawyków" />
        </div>
    </div>
</body>
</html>